
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkView(param) {
        return "<a href=\"dinvoice/ViewInvoice/" + param + "\"><i class=\"fas fa-eye\"></i></a>";
    }
   

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "dinvoice/GetAllInvoice",
            "columns": [
                { "data": "id" },
                { "data": "invoiceDate" },                
                { "data": "companyName" },
                { "data": "totalAmount" },
                { "data": "totalDiscount" },
                { "data": "taxAmount" },
                { "data": "dealerName" }, 
                 { "data": "activationDate" }, 
                { "data": "id", "render": function (data) { return LinkView(data) } },
                { "data": "paymentLink"}
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i>Invoice</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/dinvoice/create" class="btn btn-primary">Add New Invoice</a>
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Inv. Date</th>
                    <th>Customer Name</th>
                    <th>Total Amount</th>
                    <th>Total Discount</th>
                    <th>Tax</th>
                    <th>Dealer</th>
                    <th>Activation Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
