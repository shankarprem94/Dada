
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"dpayment/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "dpayment/GetAllPayment",
            "columns": [
                { "data": "id" },
                { "data": "InvoiceId" },
                { "data": "PaymentMode" },
                { "data": "PaidAmount" },
                { "data": "PaymentDate" },
                { "data": "TransactionId"},
                { "data": "id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i>Invoice</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/dpayment/create" class="btn btn-primary">Add New Payment</a>
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Invoice Id</th>
                    <th>Payment Mode</th>
                    <th>Paid Amount</th>
                    <th>Payment Date</th>
                    <th>Transaction Id</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
