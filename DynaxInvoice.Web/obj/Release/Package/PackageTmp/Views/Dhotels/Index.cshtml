
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"Dhotels/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "Dhotels/GetAllHotel",
            "columns": [
                { "data": "id" },
                { "data": "hotelName" },
                { "data": "hotelType" },
                { "data": "address1" },
                { "data": "address2" },
                { "data": "city" },
                { "data": "pincode" },
                { "data": "stateName"},
                { "data": "mobileNo"},
                { "data": "emailId" },
                { "data": "companyName"},
                { "data": "landMark"},
                { "data": "distLandmark" },
                { "data": "ratePerNight" },   
                { "data": "facility" },
                { "data": "id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i> Hotel</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/Dhotels/create" class="btn btn-primary">Add New Hotel</a>
            </div>
        </div><br /><br />
        <div style="overflow:scroll; height:450px;padding:20px;">
            <table id="tblData" class="table table-striped table-bordered" style="width:2000px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hotel</th>
                        <th>Hotel Type</th>
                        <th>Address1</th>
                        <th>Address2</th>
                        <th>City</th>
                        <th>Pincode</th>
                        <th>State Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Company Name</th>
                        <th>Landmark</th>
                        <th>Dist From Landmark</th>
                        <th>Rate/Night </th>
                        <th>Facilities</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
