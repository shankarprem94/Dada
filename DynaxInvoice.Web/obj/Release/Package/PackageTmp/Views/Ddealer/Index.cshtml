
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkEdit(param) {
        return "<a href=\"ddealer/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function LinkView(param) {
        return "<a href=\"ddealer/dealerdetail/" + param + "\"><i class=\"fas fa-eye\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "Ddealer/GetAllDealer",
            "columns": [
                { "data": "id" },
                { "data": "companyName" },
                { "data": "contactPerson" },
                { "data": "mobileNo" },
                { "data": "emailId" },
                { "data": "joinDate"},
                { "data": "id", "render": function (data) { return LinkEdit(data) } },
                { "data": "id", "render": function (data) { return LinkView(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i> Dealer List</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/Ddealer/create" class="btn btn-primary">Add New Dealer</a>
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Contact Person</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Join Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
