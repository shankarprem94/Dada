
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkView(param) {
        return "<a href=\"../dinvoice/viewreceipt/" + param + "\"><i class=\"fas fa-eye\"></i></a>";
    }

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "../dinvoice/GetAllPayment",
            "columns": [
                { "data": "id" },
                { "data": "invoiceId" },
                { "data": "paymentMode" },
                { "data": "paidAmount" },
                { "data": "chqNumber" },
                { "data": "chqDate" },
                 { "data": "bankName" },
                { "data": "paymentDate" },               
                { "data": "TransactionId"},
                { "data": "invoiceId", "render": function (data) { return LinkView(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i>Payment History</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                @*<a href="~/dpayment/create" class="btn btn-primary">Add New Payment</a>*@
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Invoice Id</th>
                    <th>Payment Mode</th>
                    <th>Paid Amount</th>
                    <th>CHQ Number</th>
                    <th>CHQ Date</th>
                    <th>Bank Name</th>
                    <th>Payment Date</th>
                    <th>Transaction Id</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
