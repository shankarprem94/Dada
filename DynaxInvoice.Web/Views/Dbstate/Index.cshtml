
@{
     ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"Dbstate/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }

    $(document).ready(function () {
        $('#tblState').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "Dbstate/GetAllStates",
            "columns": [
                { "data": "Id" },
                { "data": "StateName" },
                { "data": "Id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i> State List</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/dbstate/create" class="btn btn-primary">ADD NEW STATE</a>
            </div>
        </div>
        <table id="tblState" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>State Name</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
