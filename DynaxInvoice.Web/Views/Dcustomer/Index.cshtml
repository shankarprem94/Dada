
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"DCustomer/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }

    $(document).ready(function () {
        $('#tblData').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "DCustomer/GetAllCustomer",
            "columns": [
                { "data": "id" },
                { "data": "companyName" },
                { "data": "contactPerson" },
                { "data": "address1" },
                { "data": "city" },
                { "data": "pincode" },
                { "data": "mobileNo"},
                { "data": "email"},
                { "data": "gSTN"},
                { "data": "stateName"},
                { "data": "id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i>Customer</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/dcustomer/create" class="btn btn-primary">Add New Customer</a>
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company</th>
                    <th>Contact Person</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>GSTN</th>
                    <th>State Name</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
