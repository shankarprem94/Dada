
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"Dpackages/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }

    $(document).ready(function () {
        $('#tblPackage').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "Dpackages/GetAllPackage",
            "columns": [
                { "data": "id" },
                { "data": "packageName" },
                { "data": "packageDescription" },
                { "data": "packageAmount" },
                { "data": "maxDiscount" },
                { "data": "status", "render": function (data) { return showCheckBox(data) } },
                { "data": "id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i> Packages</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/Dpackages/create" class="btn btn-primary">Add New Package</a>
            </div>
        </div>
        <table id="tblPackage" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Package Name</th>
                    <th>Package Description</th>
                    <th>Package Amount</th>
                    <th>Max Discount</th>
                    <th>Staus</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
