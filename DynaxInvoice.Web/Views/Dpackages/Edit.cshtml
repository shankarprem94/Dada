@model DynaxInvoice.BO.DynaxPackage
@{
    ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="homecontainer">
    <h3>Welcome to Booking Master</h3>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @{
            if (ViewBag.Status != null)
            {
                if (ViewBag.Status == 1)
                {
                    <div class="alert alert-success">
                        One record update successfully.
                    </div>
                }
                else if (ViewBag.Status == 0)
                {
                    <div class="alert alert-danger">
                        Something went wrong !! Please try after sometime.
                    </div>
                }
            }
        }
    </div>
    <div class="login bg-light">
        <center>
            <h3><i class="fas fa-users"></i> Update Packages</h3>
        </center>
        <hr />
        @using (Html.BeginForm("Edit", "Dpackages", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-coffee"></i></div>
                    </div>
                    @Html.TextBoxFor(m => m.PackageName, new { @class = "form-control", placeholder = "Package Name", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-coffee"></i></div>
                    </div>
                    @Html.TextBoxFor(m => m.PackageDescription, new { @class = "form-control", placeholder = "Package Description", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-coffee"></i></div>
                    </div>
                    @Html.TextBoxFor(m => m.PackageAmount, new { @class = "form-control", placeholder = "Package Amount", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-coffee"></i></div>
                    </div>
                    @Html.TextBoxFor(m => m.MaxDiscount, new { @class = "form-control", placeholder = "Max. Discount", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.CheckBox("Status", true, new { @class = "with-font" })
                    <label for="Status">Active</label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-info m-b-20 btn-block text-uppercase waves-effect waves-light" type="submit">
                    <i class="fas fa-plus-square"></i> UPDATE PACKAGES
                </button>
            </div>
        }
    </div>
</div>
