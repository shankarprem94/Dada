
@{
     ViewBag.Title = "Dynax Solutions Pvt. Ltd.";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script type="text/javascript">

    function LinkMenu(param) {
        return "<a href=\"duser/edit/" + param + "\"><i class=\"fas fa-edit\"></i></a>";
    }
    function showCheckBox(param) {
        var cnt = 1;
        var id = "Chk" + cnt;
        if (param == true) {
            return "<input type=\"checkbox\" checked=\"checked\" id=\"" + id + "\" disabled=\"disabled\" />";
        }
        else {
            return "<input type=\"checkbox\" id=\"" + id + "\" disabled=\"disabled\"  />";
        }
        cnt++;
    }
    function ShowText(param)
    {
        if(param==1)
        {
            return "Super Admin";
        }
        else if(param ==2)
        {
            return "Dealer Admin";
        } 
        else if(param ==3)
        {
            return "End User";
        } 
    }
    $(document).ready(function () {
        $('#example').DataTable({
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            "ajax": "duser/GetAllUser",
            "columns": [
                { "data": "Id" },
                { "data": "UserName" },
                { "data": "FullName" },               
                { "data": "Email" },
                { "data": "Mobile" },
                { "data": "UserType", "render": function (data) { return ShowText(data) } },
                { "data": "Status", "render": function (data) { return showCheckBox(data) } },
                { "data": "Id", "render": function (data) { return LinkMenu(data) } }
            ]
        });
    });

</script>
<div style="margin-top:80px; min-height:500px;">
    <h3><i class="far fa-address-book"></i> User List</h3>
    <div class="tbContainer">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <a href="~/duser/create" class="btn btn-primary">Add New User</a>
            </div>
        </div>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Role</th>
                    <th>Staus</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
